# Users Service
USERS_SERVICE_PORT=8081
USERS_SERVICE_HOST=localhost

# Products Service
PRODUCTS_SERVICE_PORT=8082
PRODUCTS_SERVICE_HOST=localhost

# Gateway
GATEWAY_PORT=4000
GATEWAY_HOST=localhost
USERS_SERVICE_URL=http://localhost:8081/query
PRODUCTS_SERVICE_URL=http://localhost:8082/query

# GraphQL Settings
GRAPHQL_PLAYGROUND_ENABLED=true
GRAPHQL_INTROSPECTION_ENABLED=true

# Logging
LOG_LEVEL=info

# Federation
FEDERATION_ENABLED=true
FEDERATION_VERSION=2 

# Benchmark and Race Detection
BENCHMARK_ENABLED=true
RACE_DETECTION_ENABLED=true
BENCHMARK_ITERATIONS=10
BENCHMARK_TIMEOUT=5s
STRESS_TEST_GOROUTINES=50 

# Semaphore and Backpressure
SEMAPHORE_MAX_CONCURRENT=3
SEMAPHORE_TIMEOUT=10s
BACKPRESSURE_ENABLED=true 

# MÃ©trics and Onservability
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
TRACING_ENABLED=true
TRACE_ID_HEADER=X-Trace-ID

# Cache ande Performance
CACHE_MAX_SIZE=100
CACHE_TTL=5m
SEMAPHORE_MAX_CONCURRENT=10
